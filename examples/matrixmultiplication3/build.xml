<project default="jar">
	<target name="clean">
		<delete dir="build" />
		<delete file="MatrixMultiplication3.jar" />
		<delete file="MatrixMultiplication3-GPU.jar" />
	</target>
	<target name="compile">
		<mkdir dir="build/classes" />
		<javac srcdir="src" destdir="build/classes" classpath="../../rootbeer-develop-branch.jar" includeantruntime="false" />
	</target>
	<target name="jar" depends="compile">
		<jar destfile="MatrixMultiplication3.jar" basedir="build/classes">
			<manifest>
				<attribute name="Main-Class" value="at.illecker.rootbeer.examples.matrixmultiplication3.MatrixMultiplication3Kernel" />
			</manifest>
		</jar>
	</target>
	<target name="run" depends="jar">
		<echo>java -Xmx4G -jar ../../rootbeer-develop-branch.jar MatrixMultiplication3.jar MatrixMultiplication3-GPU.jar -64bit -noexceptions -shared-mem-size 8204 -maxrregcount 32</echo>
		<exec executable="java">
			<arg value="-Xmx4G" />
			<arg value="-jar" />
			<arg value="../../rootbeer-develop-branch.jar" />
			<arg value="MatrixMultiplication3.jar" />
			<arg value="MatrixMultiplication3-GPU.jar" />
			<arg value="-64bit" />
			<arg value="-noexceptions" />
<!--			<arg value="-shared-mem-size 8204" />
			<arg value="-maxrregcount 32" /> -->
		</exec>
		<echo>java -Xmx4G -jar MatrixMultiplication3-GPU.jar</echo>
		<exec executable="java">
			<arg value="-Xmx4G" />
			<arg value="-jar" />
			<arg value="MatrixMultiplication3-GPU.jar" />	
		</exec>
	</target>
</project>
